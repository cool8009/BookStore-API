{
  "ConnectionStrings": {
    "BookstoreDbConnectionString": "Server=(localdb)\\mssqllocaldb;Database=BookStoreAPIDb;Trusted_Connection=True;MultipleActiveResultSets=True"
  },
  // serilog config. telling it to read MS logs as well as write its own
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      //where it writes to, file and seq
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      //seq service url
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  },
  "AllowedHosts": "*"
}
